<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3 border bg-light dashboard">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
     <div class="col-md-9 pl-2">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
    <div class="jumbotron w-75 mx-auto bg-light">
        <h1 class="display-4 text-center">Welcome to the basic facebook</h1>
        <p class="lead text-center">This is a basic version of facebook, i made this for the purpose of learning about rails, the source code is available on github</p>
        <hr class="my-4">
        <%= link_to "Sign up now", signup_path, class: "btn btn-lg btn-primary w-25 mx-auto d-block" %>
    </div>
<% end %>